RewriteEngine On

Options All -Indexes
IndexIgnore *
LimitRequestBody 10240000

RewriteRule ^([a-zA-Z0-9]+)$ index.php?script=$1 [QSA,L]
RewriteRule ^([a-zA-Z0-9]+)$ download.php?download=$1 [QSA,L]
RewriteRule ^([a-zA-Z0-9]+)/([a-zA-Z0-9_-]+)$ index.php?script=$1&accion=$2 [QSA,L]
RewriteRule ^([a-zA-Z0-9]+)/([a-zA-Z0-9_-]+)$ script/$1.php?script=$2&accion=$3 [QSA,L]

php_value upload_max_filesize 128M
php_value post_max_size 128M
php_value max_execution_time 300
php_value max_input_time 300